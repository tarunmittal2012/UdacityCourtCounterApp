<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/images"
    tools:context="com.example.tarunmittal.courtapplication.MainActivity">
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
    <LinearLayout
        android:layout_width="185dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@string/font_family"
            android:text="HOME"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="0"
            android:id="@+id/text1"
            android:textColor="@android:color/white"
            android:textSize="56sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:id="@+id/touchdownA"
            android:background="@color/button"
            android:text="touch down +6"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="8dp"
            android:id="@+id/fieldgoalA"
            android:fontFamily="@string/font_style"
            android:background="@color/button"
            android:text="field goal +3"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="8dp"
            android:id="@+id/extrapointA"
            android:background="@color/button"
            android:text="extra point +3"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="8dp"
            android:id="@+id/tackleA"
            android:background="@color/button"
            android:text="tackle offensive +2"/>


    </LinearLayout>
    <View
        android:layout_width="5dp"
        android:layout_height="395dp"
        android:background="@android:color/holo_red_dark">

    </View>


    <LinearLayout
        android:layout_width="185dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="AWAY"
            android:fontFamily="@string/font_family"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/text2"
            android:layout_marginTop="16dp"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="56sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:text="touch down +6"
            android:id="@+id/touchdownB"
            android:background="#8BC34A"
            android:layout_marginRight="24dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:background="@color/button"
            android:layout_marginTop="8dp"
            android:text="field goal +3"
            android:id="@+id/fieldgoalB"
            android:layout_marginRight="24dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:text="extra point +3"
            android:id="@+id/extrapointB"
            android:background="@color/button"
            android:layout_marginRight="24dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="8dp"
            android:id="@+id/tackleB"
            android:background="@color/button"
            android:text="tackle offensive +2"/>

    </LinearLayout>


    </LinearLayout>

<Button
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:text="Reset"
    android:textSize="14sp"
    android:id="@+id/reset"
    android:layout_marginBottom="32dp"
    android:layout_gravity="center"
    android:background="@color/button"/>
</LinearLayout>
